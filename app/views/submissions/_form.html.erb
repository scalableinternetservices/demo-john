<%= simple_form_for(@submission) do |form| %>
  <%= form.input :title, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
  <%= form.input :url, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
  <%= form.input :community_id, collection: Community.all, include_blank: false, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
  <%= form.button :submit, class: 'btn-primary btn-sm' %>
<% end %>
